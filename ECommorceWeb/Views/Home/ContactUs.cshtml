
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-3">İletişim</h2>
    <p>Bizimle iletişime geçmekten çekinmeyin. Her türlü soru, öneri veya destek için buradayız!</p>

    <form method="post" asp-action="Contact">
        <div class="form-group mb-3">
            <label for="name">Adınız</label>
            <input type="text" class="form-control" id="name" name="Name" required />
        </div>
        <div class="form-group mb-3">
            <label for="email">E-Posta</label>
            <input type="email" class="form-control" id="email" name="Email" required />
        </div>
        <div class="form-group mb-3">
            <label for="message">Mesajınız</label>
            <textarea class="form-control" id="message" name="Message" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>

    <div class="mt-4">
        <h5>İletişim Bilgileri</h5>
        <p><strong>Email:</strong> info@ecommorceweb.com</p>
        <p><strong>Telefon:</strong> +90 555 123 45 67</p>
        <p><strong>Adres:</strong> İstanbul, Türkiye</p>
    </div>
</div>

