@model ProductListViewModel
@using System.Net
@using Entities.Concrete

@{
    ViewData["Title"] = "Home Page";
}

<div class="purchase">
    <div class="purchase-left" style="background-image:url(https://themewagon.github.io/hexashop/assets/images/left-banner-image.jpg)">
        <h1>We Are SNHFSTORE</h1>
        <h6>Awesome, clean & creative HTML5 Template</h6>

        <a class="purchase-btn" href="/Product/Index">Purchase Now!</a>

    </div>
    <div class="purchase-mid">
        <div class="p-women" style="background-image:url(https://themewagon.github.io/hexashop/assets/images/baner-right-image-01.jpg)">
            <h2>Women</h2>
            <small>Best Clothes For Women</small>

            <a class="purchase-btn" href="/Product/Index?filter=@WebUtility.UrlEncode("Womens")">Discover More</a>

        </div>
        <div class="p-kid" style="background-image:url(https://themewagon.github.io/hexashop/assets/images/baner-right-image-03.jpg)">
            <h2>Kid</h2>
            <small>Best Clothes For  Kid</small>
            <a class="purchase-btn" href="/Product/Index?filter=@WebUtility.UrlEncode("Kids")">Discover More</a>
        </div>
    </div>
    <div class="purchase-right">
        <div class="p-men" style="background-image:url(https://themewagon.github.io/hexashop/assets/images/baner-right-image-02.jpg)">
            <h2>Men</h2>
            <small>Best Clothes For Men</small>
            <a class="purchase-btn" href="/Product/Index?filter=@WebUtility.UrlEncode("Mens")">Discover More</a>
        </div>
        <div class="p-acs" style="background-image:url(https://themewagon.github.io/hexashop/assets/images/baner-right-image-04.jpg)">
            <h2>Accessories</h2>
            <small>Best Trend Accessories</small>
            <a class="purchase-btn" href="/Product/Index?filter=@WebUtility.UrlEncode("Accessories")">Discover More</a>
        </div>
    </div>

</div>
<div class="mens-lastest">
    <div class="ml-text">
        <h1 style="font-weight:900;">Men Lastest</h1>
        <small>Details to details is what makes Hexashop different from the other themes.</small>
    </div>
    <div class="ml-content">
        @foreach (var item in Model.Last3MenProduct)
        {
            string imgurl = "";
            if (Model.ProductImages != null && Model.ProductImages.ContainsKey(item.ProductId) && Model.ProductImages[item.ProductId].Any())
            {
                imgurl = Model.ProductImages[item.ProductId].Last().ImageBase64; // Son resmi alıyoruz
            }

            <div class="ml-product">
                <div class="ml-product-box" style="background-image:url('@imgurl');">
                    <a class="pb-btn" asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.ProductId"><i class="fa-regular fa-eye"></i></a>
                    <a class="pb-btn" href=""><i class="fa-regular fa-heart"></i></a>
                </div>
                <h3 style="font-weight:700;">@item.Name</h3>
                <h6 class="text-muted">@item.Price.ToString("F2") ₺</h6>
            </div>
        }
    </div>
</div>
