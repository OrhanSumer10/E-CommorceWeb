@model CategoryListViewModel

@{
    Layout = "_AdminLayout";
}
<h2>Update Category</h2>

<form class="form-control-plaintext" method="post">
    <div class="add-product">
        <div class="ap-left">
            <label for="formGroupExampleInput">Category Name</label>
            <input class="form-control" name="Name" value="@Model.category.Name" type="text" placeholder="Enter Category Name">
            <br />
        </div>
        <div class="ap-right">
            <label for="formGroupExampleInput">Description</label>
            <input class="form-control" name="Description" type="text" value="@Model.category.Description" placeholder="Enter Description" />
            <br />
            <br />
            <button type="submit" class="btn btn-outline-primary"> Güncelle <i class='bx bx-send'></i></button>

        </div>

    </div>
</form>